pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'rowidarafiek/frontend'
        DOCKER_REGISTRY_FILE = "deployment.yaml"
        REPO_CACHE = "/tmp/ivolve-repo"
    }
    
    stages {
        stage('Prepare Workspace') {
            steps {
                script {
                    sh '''
                        # Configure Git for slow connections
                        git config --global http.version HTTP/1.1
                        git config --global http.postBuffer 524288000
                        git config --global http.lowSpeedLimit 0
                        git config --global http.lowSpeedTime 999999
                        
                        # Check if cached repo exists
                        if [ ! -d "${REPO_CACHE}/.git" ]; then
                            echo "=== First time setup: Cloning repository to cache ==="
                            mkdir -p /tmp
                            cd /tmp
                            rm -rf ivolve-repo
                            
                            # Clone with retry logic
                            for i in 1 2 3 4 5; do
                                echo "Clone attempt $i..."
                                if git clone --depth 1 https://github.com/rowidarafiek/ivolve.git ivolve-repo; then
                                    echo "Clone successful!"
                                    break
                                else
                                    echo "Clone failed, retrying in 10 seconds..."
                                    sleep 10
                                    rm -rf ivolve-repo
                                fi
                            done
                            
                            if [ ! -d "${REPO_CACHE}/.git" ]; then
                                echo "ERROR: Failed to clone repository after 5 attempts"
                                exit 1
                            fi
                        else
                            echo "=== Updating cached repository ==="
                            cd ${REPO_CACHE}
                            git fetch origin main || echo "Fetch failed, using cached version"
                            git reset --hard origin/main || git reset --hard HEAD
                        fi
                        
                        # Copy to workspace
                        echo "=== Copying files to workspace ==="
                        rm -rf ${WORKSPACE}/*
                        rm -rf ${WORKSPACE}/.git
                        cp -r ${REPO_CACHE}/* ${WORKSPACE}/ || exit 1
                        cp -r ${REPO_CACHE}/.git ${WORKSPACE}/ || exit 1
                        
                        # Verify
                        cd ${WORKSPACE}
                        ls -la
                        echo "Workspace prepared successfully!"
                    '''
                }
            }
        }
        
        stage('Run Unit Tests') {
            steps {
                echo 'Running unit tests...'
                sh 'mvn test'
            }
        }
        
        stage('Build the Application') {
            steps {
                echo 'Building the application...'
                sh 'mvn package'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh "docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} ."
            }
        }
        
        stage('Push Docker Image to Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASSWORD')]) {
                    echo 'Pushing Docker image to registry...'
                    sh '''
                        docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                        docker push ${IMAGE_NAME}:${BUILD_NUMBER}
                    '''
                }
            }
        }
        
        stage('Delete Docker Image') {
            steps {
                echo 'Deleting Docker image...'
                sh "docker rmi ${IMAGE_NAME}:${BUILD_NUMBER}"
            }
        }
        
        stage('Update Deployment deployment.yaml') {
            steps {
                echo 'Updating deployment...'
                sh "sed -i 's|image: .*|image: ${IMAGE_NAME}:${BUILD_NUMBER}|' ${DOCKER_REGISTRY_FILE}"
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([
                    string(credentialsId: 'sa-cred', variable: 'TOKEN'),
                    string(credentialsId: 'api-cred', variable: 'APISERVER')
                ]) {
                    echo 'Deploying to Kubernetes...'
                    sh "kubectl apply -f deployment.yaml --server \"${APISERVER}\" --token \"${TOKEN}\" --insecure-skip-tls-verify=true"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
            echo "Application deployed: ${IMAGE_NAME}:${BUILD_NUMBER}"
        }
        failure {
            echo 'Pipeline failed!'
            echo 'Check console output for errors.'
        }
        always {
            echo 'Pipeline finished.'
        }
    }
}
